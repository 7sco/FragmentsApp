<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franciscoandrade.fragmentspractice.SecondFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/editText_secondfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button_secondfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Text"
            android:layout_gravity="center"
            android:onClick="onClickFragment"/>



        <TextView
            android:id="@+id/textView_secondfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Text will be change!"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>


</FrameLayout>
